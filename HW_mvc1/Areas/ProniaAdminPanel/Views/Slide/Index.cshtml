@model List<Slide>
@{
	int num = 0;
}


<div class="main-panel">
	<div class="content-wrapper">
		<div class="row">

			<div class="col-lg-12 grid-margin stretch-card">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Slide Table</h4>
						<a asp-action="create" class="btn btn-success">Create</a>

						<div class="table-responsive">
							<table class="table table-striped">
								<thead>
									<tr>
										<th>
											No
										</th>
										<th>
											Image
										</th>
										<th>
											Title
										</th>
										<th>
											Order
										</th>
										<th>
											Actions
										</th>
									</tr>
								</thead>
								<tbody>
									@foreach (Slide slide in Model)
									{
										num++;
										<tr>
											<td class="py-1">
												@num
											</td>
											<td>
												<img src="~/assets/images/website-images/@slide.ImageUrl"/>
											</td>
											<td>
												@slide.Title
											</td>
											<td>
												@slide.Order
											</td>
											<td>
												<a asp-action="Update" asp-route-id="@slide.Id" class="btn btn-primary">edit</a>
												<a asp-action="Delete" asp-route-id="@slide.Id" class="btn btn-danger">remove</a>
												<a class="btn btn-warning">detail</a>
											</td>

										</tr>
									}

								</tbody>
							</table>
						</div>
					</div>
				</div>

			</div>
		</div>
	</div>
</div>